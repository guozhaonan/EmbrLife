<% @ideas.each do |idea| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail" style="height: 300px;">
      <img src="..." alt="...">
      <div class="caption">
        <h3><%= idea.name %></h3>
        <h4><%= idea.user_id %></h4>
        <p><%= idea.tagline %></p>
        <% if idea.user_id == current_user %>
        <p>
          <%= link_to 'Edit', edit_idea_path(idea), class: "btn btn-primary" %>
          <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
