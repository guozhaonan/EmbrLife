<div class="container">
  <h1>Listing Ideas</h1>
  <h3><%= link_to 'New Idea', new_idea_path %></h3>
      <% @ideas.each do |idea| %>
          <%= image_tag idea.image(:thumb) %>
          <%= link_to idea.name, idea %>
          <%= idea.tagline %>
          <%= idea.description %>
          <% if idea.user_id == current_user %>
            <%= link_to 'Edit', edit_idea_path(idea) %>
            <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
      <% end %>
</div>

