<div class="bk2"></div>
<div class="wrapper-user-show">
  <div class="row">
    <div class="col-md-12 " style="height:100px;">

    </div>
  </div>
  <div class="row">
    <div class="col-md-3" style="padding-right:0px;">
      <div class="thumbnail" style="background-color:gray; height:195px;">
        <h1>Image</h1>
      </div>
    </div>
    <div class="col-md-9" style="padding-left:0px;">
      <div class="thumbnail" style=" height:195px;padding:20px;">
        <h1><%= @user.first_name %> <%= @user.last_name %></h1>
        <p style="color:gray;margin-bottom:0px;">Title</p>
        <% if @user.college? %>
          <p style="color:gray;margin-bottom:0px;"><%= @user.college %></p>
        <%end%>
        <p style="color:gray;margin-bottom:0px;">
          location
        </p>
      </div>
    </div>
  </div>
  <div class="row" style="padding:15px;">
    <div class="col-md-4">
      <div class="row">
        <div class="thumbnail">
          <h3>About Me</h3>
          <% if @user.email? %>
            <h5><span class="id_dcyantext">Email:</span></h5>
            <p><%= @user.email %></p><br>
          <%end%>
          <h5><span class="id_dcyantext">Skills:</span></h5>
          <p>Skills</p><br>
        </div>
      </div>
      <div class="row">
        <div class="thumbnail">
          <h3>My Projects</h3>
          <p>project 1</p>
        </div>
      </div>
    </div>
    <div class="col-md-8" style="padding-right:0px;">
      <div class="thumbnail">
        <% if @user.bio? %>
          <p><span class="id_dcyantext">My Story </span></p>
          <p><%= @user.bio %></p><br>
        <%end%>
        <% if @user.values? %>
          <p><span class="id_dcyantext">What I Believe In </span></p>
          <p><%= @user.values %></p><br>
        <%end%>
      </div>
      <div class="thumbnail">
        <h3>Friends</h3>
        <% @user.friendships.each do |f| %>
          <%= link_to user_path(f.friend.username) do %><p class="id_dcyantext"><%= f.friend.first_name %> <%= f.friend.last_name %><% end %>
          <% if user_signed_in? %>
            <%= link_to "#", class: "start-conversation", "data-sid" => current_user.id, "data-rip" => f.friend.id do %>Send Message</p><% end %>
          <% end %>
        <% end %>
      </div>
      <div class="thumbnail">
        <h3>Recent Activity</h3>
        <% @user.comments.each do |c| %>
          <p><%=link_to idea_path(c.idea.id) do %><span class="id_dcyantext"><%= c.idea.name %></span><% end %>: <%= c.comment_text %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
