
<%= form_for @idea, html: { multipart: true } do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name , :class => 'textbox', :placeholder => 'Idea Name'%>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.text_field :tagline, :class => 'textbox', :placeholder => 'Tagline'%>
  </div>
  <div class="field">
    <%= f.text_field :description , :class => 'textbox', :placeholder => 'Description'%>
  </div>
  <div class="field">
    <%= f.text_field :story , :class => 'textbox', :placeholder => 'Tell us the story behind your project!'%>
  </div>
  <div class="actions">
    <%= f.submit :class => 'submit'%>
  </div>
<% end %>
